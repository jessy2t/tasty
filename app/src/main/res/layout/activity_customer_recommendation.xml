<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CustomerRecommendationActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
            android:text="@string/suggestion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/suggestion_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="115dp"
            app:layout_constraintBottom_toTopOf="@+id/restaurant_suggestion"
            android:textSize="@dimen/text_headline"
            android:textStyle="bold"
            android:textColor="@color/green_700"/>
    <TextView
            android:text="Cooles Restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/restaurant_suggestion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="250dp"
            android:textSize="@dimen/text_normal"
            android:onClick="clickOnRestaurantRecommendation"/>
    <TextView
            android:text="SupermenÃ¼"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/meal_suggestion"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_suggestion"
            android:textSize="@dimen/text_normal"
            android:layout_marginTop="20dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/meal_suggestion"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp">

        <Button
            android:id="@+id/reservation_delivery_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="clickOnReservationOrDelivery"
            android:text="@string/reservation_delivery_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/text_button"/>
        <Button
                android:text="@string/new_recommendation_label"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/new_recommendation_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="generateNewRecommendation"
                android:textSize="@dimen/text_button"/>

        <Button
            android:id="@+id/new_input_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="clickOnNewInput"
            android:text="@string/new_input_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/text_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>