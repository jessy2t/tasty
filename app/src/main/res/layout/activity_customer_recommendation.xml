<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CustomerRecommendationActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" android:id="@+id/appBarLayout2">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
            android:text="@string/suggestion_title"
            android:textSize="@dimen/text_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/suggestion_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textColor="@color/green_700"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/suggestion_title"
            android:layout_marginTop="75dp"
            app:layout_constraintBottom_toTopOf="@+id/button_layout"
            android:orientation="vertical"
            android:background="@color/green_700"
            android:id="@+id/suggestion_layout"
            android:onClick="clickOnRestaurantRecommendation">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp">
            <ImageView
                    android:layout_width="299dp"
                    android:layout_height="149dp"
                    app:srcCompat="@drawable/unknown_restaurant"
                    android:id="@+id/restaurant_image"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Cooles Restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/restaurant_suggestion"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_image"
                    app:layout_constraintBottom_toTopOf="@id/meal_suggestion"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/text_subtitel"
                    android:textStyle="bold"/>
            <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/info_icon"
                    app:layout_constraintStart_toEndOf="@id/restaurant_suggestion"
                    android:layout_marginStart="1dp"
                    app:layout_constraintTop_toTopOf="@id/restaurant_suggestion"
                    android:id="@+id/info_icon"/>
            <TextView
                    android:text="SupermenÃ¼"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/meal_suggestion"
                    app:layout_constraintTop_toBottomOf="@+id/restaurant_suggestion"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/text_normal"
                    android:layout_marginBottom="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/suggestion_layout"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"
            android:id="@+id/button_layout">

        <Button
                android:id="@+id/reservation_delivery_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="clickOnReservationOrDelivery"
                android:text="@string/reservation_delivery_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/text_button"/>
        <Button
                android:text="@string/new_recommendation_label"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/new_recommendation_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reservation_delivery_btn"
                android:layout_marginTop="10dp"
                android:onClick="generateNewRecommendation"
                android:textSize="@dimen/text_button"/>

        <Button
                android:id="@+id/new_input_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="clickOnNewInput"
                android:text="@string/new_input_label"
                app:layout_constraintTop_toBottomOf="@id/new_recommendation_btn"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/text_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>